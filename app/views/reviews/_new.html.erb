<h1>New review for <%= @product.name %></h1>

<%= render('layouts/errors', :object => @review) %>

<%= form_for [@product, @review], remote: true do |f| %>
  <%= f.label :author %>
  <%= f.text_field :author %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%= f.label :rating %>
  <%= f.number_field :rating %>
  <%= f.submit %>
<% end %>
